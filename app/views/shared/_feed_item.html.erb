<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <% content_displayed = "False" %>
    <% for username in User.all %>
	  <% if feed_item.content.include?("@"+username.name) %>
	    <% modified_content = feed_item.content.partition("@"+username.name) %>
	    <span class="content"><%= link_to '@'+username.name, username %><%= modified_content[2] %></span>
	    <% content_displayed = "True" %>
	  <% break %>
	  <% end %>
	<% end %>
	<% if content_displayed == "False" %>
	  <span class="content"><%= feed_item.content %></span>
	<% end %>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(feed_item.user) %>
  <td>
    <%= link_to "delete", feed_item, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => feed_item.content %>
  </td>
  <% end %>
</tr>